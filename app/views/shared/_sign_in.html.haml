= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .form-floating.mb-3
    = f.phone_field :phone, autofocus: true, class: 'form-control', id: 'floatingPhone', placeholder: t('form.shared.phone')
    %label{ for: 'floatingPhone' }= t('form.shared.phone')

  .form-floating.mb-3
    = f.password_field :password, class: 'form-control', id: 'floatingPassword', placeholder: t('form.shared.password')
    %label{ for: 'floatingPassword' }= t('form.shared.password')
  - if devise_mapping.rememberable?
    .field
      = f.check_box :remember_me, class: 'form-check-input'
      = f.label :remember_me

  .actions
    = f.submit t('form.signed_in.log_in'), class: 'btn btn-outline-success'
